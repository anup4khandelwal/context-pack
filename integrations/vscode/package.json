{
  "name": "context-pack-vscode",
  "displayName": "Context Pack",
  "description": "Generate context-pack bundles and copy to clipboard",
  "version": "0.1.0",
  "publisher": "anup4khandelwal",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:context-pack.generateBundle"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "context-pack.generateBundle",
        "title": "Context Pack: Generate Bundle (Copy to Clipboard)"
      }
    ]
  },
  "scripts": {
    "build": "tsc -p .",
    "watch": "tsc -p . -w",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.4.5",
    "vsce": "^2.15.0"
  }
}
