{
  "name": "context-pack",
  "version": "0.1.0",
  "description": "Task-specific context bundle generator for Claude Code / Codex",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anup4khandelwal/context-pack.git"
  },
  "homepage": "https://anup4khandelwal.github.io/context-pack/",
  "bugs": {
    "url": "https://github.com/anup4khandelwal/context-pack/issues"
  },
  "license": "MIT",
  "type": "module",
  "bin": {
    "context-pack": "dist/index.js"
  },
  "files": [
    "dist",
    "rules",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "bundle": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/context-pack.js --banner:js='#!/usr/bin/env node'",
    "lint": "echo 'no lint configured'",
    "test": "vitest run",
    "smoke": "node scripts/smoke.mjs",
    "docs:dev": "vitepress dev docs-site",
    "docs:build": "vitepress build docs-site",
    "docs:preview": "vitepress preview docs-site",
    "prepublishOnly": "npm run test && npm run build"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "ignore": "^5.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "esbuild": "^0.25.0",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5",
    "vitest": "^2.0.5",
    "vitepress": "^1.3.4"
  }
}
